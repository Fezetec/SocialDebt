<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingTop="200dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <TextView
        android:id="@+id/txtPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Points"
        android:textSize="60sp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnPayOffDebt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAY OFF DEBT"
        android:layout_below="@+id/txtPoints"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnAddDebt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD DEBT"
        android:layout_below="@+id/btnPayOffDebt"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:layout_below="@+id/btnAddDebt"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>